    -->
    <entity>
	<name>site</name>
	<field>
	    <fname>SHORT_NAME</fname>
	    <length>255</length>
	    <regex>/^[a-zA-Z0-9\-\._]+$/</regex>
	</field>
	<field>
	    <fname>DOMAIN</fname>
