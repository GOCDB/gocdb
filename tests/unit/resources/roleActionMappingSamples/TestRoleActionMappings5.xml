                <RoleRef idRef="SITE_OPS_MAN"/>
                <RoleRef idRef="NGI_SEC_OFFICER"/> 
                <RoleRef idRef="NGI_OPS_DEP_MAN"/> 
                <RoleRef idRef="NGI_OPS_MAN"/> 
